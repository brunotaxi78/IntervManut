@model IEnumerable<IntervManut.Models.Estado>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Adicionar</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="bg-secondary">
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EstadoId"><i class="fa fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.EstadoId"><i class="fa fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.EstadoId"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
